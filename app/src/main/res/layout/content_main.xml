<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="template.cheng.hollis.template.MainActivity"
    tools:showIn="@layout/app_bar_main">

    <template.cheng.hollis.template.TextView.RobotoBoldTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RobotoBoldTextView" />

    <template.cheng.hollis.template.TextView.RobotoBoldTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RobotoBoldTextView"
        android:textStyle="bold" />

    <template.cheng.hollis.template.TextView.SweetSansRegTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SweetSansRegTextView" />

    <template.cheng.hollis.template.TextView.AutoResizeTextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:ellipsize="none"
        android:gravity="center"
        android:maxLines="1"
        android:text="AutoResizeTextyyy"
        android:textSize="100sp" />

    <template.cheng.hollis.template.TextView.AutoResizeTextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:ellipsize="none"
        android:gravity="center"
        android:maxLines="1"
        android:text="AutoResizeTextyyy"
        android:textSize="100sp" />

    <EditText
        android:id="@+id/etTextBundle"
        style="@style/App_EditTextStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="EditText below Auto Test Bundle"
        android:lines="1"
        android:singleLine="true" />

    <AutoCompleteTextView
        android:id="@+id/etProperty_Name"
        style="@style/App_EditTextStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="AutoCompleteTextView"
        android:lines="1"
        android:singleLine="true" />


    <template.cheng.hollis.template.Button.SweetSansRegButton
        android:id="@+id/SSRBTestBundle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/btn_rounded"
        android:text="SweetSansRegButton"
        android:textColor="@color/White" />

    <Button
        android:id="@+id/btnFbTestPage"
        android:text="FB Login With FBLoginButton Page"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btnFbOtherClickPage"
        android:text="FB Login With otherClick Page"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <info.hoang8f.android.segmented.SegmentedGroup xmlns:segmentedgroup="http://schemas.android.com/apk/res-auto"
        android:id="@+id/RGUserPropertyType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:layout_weight="3"
        android:orientation="horizontal"
        segmentedgroup:sc_border_width="1dp"
        segmentedgroup:sc_checked_text_color="@color/White"
        segmentedgroup:sc_corner_radius="10dp"
        segmentedgroup:sc_tint_color="@color/SelectedColor">

        <!--segmentedgroup:sc_unchecked_tint_color="#ff0000"-->

        <!--<RadioGroup-->
        <!--android:id="@+id/RGUserPropertyType" -->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_marginBottom="5dp"-->
        <!--android:layout_marginTop="5dp"-->
        <!--android:layout_weight="3"-->
        <!--android:orientation="horizontal">-->

        <RadioButton
            android:id="@+id/RBResident"
            style="@style/RadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Resident" />

        <RadioButton
            android:id="@+id/RBOwner"
            style="@style/RadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Owner" />

        <RadioButton
            android:id="@+id/RBTenant"
            style="@style/RadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Tenant" />
    </info.hoang8f.android.segmented.SegmentedGroup>
</LinearLayout>
