<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/actionbar_size"
    android:layout_marginBottom="1dp"
    android:background="@color/White"
    android:clickable="true"
    android:paddingBottom="@dimen/calendarTitlePaddingBottom"
    android:paddingTop="@dimen/calendarTitlePaddingTop">

    <ImageView
        android:id="@+id/left_button"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="false"
        android:layout_centerVertical="true"
        android:padding="@dimen/padding"
        android:src="@drawable/btn_calendar_previous_left"
        tools:ignore="contentDescription" />
    <!--android:background="?attr/selectableItemBackground"-->
    <!--android:src="@drawable/ic_arrow_back_white_24dp"-->

    <!--<TextView -->
<template.cheng.hollis.template.textView.RobotoBoldTextView
        android:id="@+id/dateTitle"
        style="@style/CalendarView.MonthTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="false"
        android:layout_centerInParent="true"
        android:layout_marginEnd="@dimen/actionbar_size"
        android:layout_marginLeft="@dimen/actionbar_size"
        android:layout_marginRight="@dimen/actionbar_size"
        android:layout_marginStart="@dimen/actionbar_size"
        android:gravity="center_horizontal|center|center_vertical"
        android:tag="dateTitle"
        android:textColor="@color/lightSelectedColor"
        tools:text="MONTH 2014" />

    <ImageView
        android:id="@+id/right_button"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="false"
        android:layout_centerVertical="true"
        android:padding="@dimen/padding"
        android:src="@drawable/btn_calendar_next_right"
        tools:ignore="contentDescription" />
    <!--android:background="?attr/selectableItemBackground"-->
    <!--android:src="@drawable/ic_arrow_forward_white_24dp"-->
</RelativeLayout>