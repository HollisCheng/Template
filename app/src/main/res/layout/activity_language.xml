        <!--android:background="@drawable/list_selector"-->
        <!--android:text="ç®€"-->
        <!--android:textColor="@color/Gray"-->
        <!--android:textStyle="bold" />-->

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center"
        android:text="icon_active_bookmark = CoordinatorLayout Activity\n" />

    <ImageView
        android:id="@+id/IVonTouch"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:src="@drawable/icon_active_bookmark" />

    <me.philio.pinentry.PinEntryView
        android:id="@+id/pin_entry_simple"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        app:accentType="character"
        app:digitBackground="@color/lightSelectedColor"
        app:digitTextSize="10sp"
        app:mask="*" />

    <!--no mask-->
