<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/White"
    android:orientation="vertical">

    <include layout="@layout/toolbar" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center"
        android:text="this is the second way to change application language,\nthe way is after you select the language you want,\nthe application will be clear all activity and\nback to main page with using that language\n(add loading for api, if your data loading by API) " />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:weightSum="2">

        <Button
            android:id="@+id/btnLangENG"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/list_selector"
            android:text="@string/LangBtnEng"
            android:textColor="@color/Gray" />
        <!--android:layout_width="40dp"-->
        <Button
            android:id="@+id/btnLangTC"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/list_selector"
            android:text="@string/LangBtnTC"
            android:textColor="@color/Gray" />
        <!--android:layout_width="40dp"-->

        <!--<Button-->
        <!--android:id="@+id/btnLangSC"-->
        <!--android:layout_width="0dp"-->
        <!--android:layout_height="match_parent"-->
